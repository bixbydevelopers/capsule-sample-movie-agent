layout-macro-def (PERSON_SUMMARY_WATCH) {
  params {
    param (person) {
      type (Person)
      min (Required)
      max (One)
    }
  }
  content {
    image-card {
      aspect-ratio (Four_Three)
			image-object-fit (Cover)
			image-url ("[#{value(person.profileUrl)}]")
			text-position (Overlay)
			title-area {
				halign (Center)
				slot1 {
					text {
						value {
							template ("#{value(person.name)}")
						}
					}
				}
			}
		}
  }
}
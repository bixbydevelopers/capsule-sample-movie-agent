layout-macro-def (MOVIE_SUMMARY) {
  params {
    param (movie) {
      type (Movie)
      min (Required) max (One)
    }
  }
  content {
    cell-card {
			slot1 {
				image {
					shape (Square)
					url ("[#{value(movie.posterUrl)}]")
				}
			}
      slot2 {
        content {
          primary {
            template ("#{value(movie.title)}")
          }
        }
      }
    }
  }
}
